{
  "compilerOptions": {
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "target": "ES6",
    "module": "ESNext",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "allowJs": false,
    "typeRoots": ["./node_modules/@types", "./dist/index.d.ts"],
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "./src",
  },
  "include": ["src/index.tsx"],
  "exclude": ["node_modules", "dist", "rollup.config.js"]
}
